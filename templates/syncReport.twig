                        // Chain Ajax calls (getDictionaryIds, initSyncReport)
                        $("body").addClass("loading");
                        db.getDictionaryIds().then(function () {
                            // Done getDictionaryIds
                            $("body").removeClass("loading");
                            dataTables.initSyncReport();
