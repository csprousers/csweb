                };

                var off = function () {
                    passwordField.val("");
                    passwordConfirmField.val("");
                    passwordWrapper.addClass("hidden");
                    form.unbind("submit");
                    form.validator("destroy");
                    isPasswordFieldsShown = false;
                };

                var togglePasswordFields = function () {
                    if (isPasswordFieldsShown) {
